/* pages/watchMap/watchMap.wxss */
page{
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
}
.box{
    height: 100%;
}
map{
    width: 100%;
    flex: 1;
}
.place-info{
    width: 100%;
    height: 200rpx;
    padding: 10rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    border: 1rpx solid #eeeeee;
}
.swiper-box{
    width: 100%;
    height: 200rpx;
    box-sizing: border-box;
}
.block-box{
    width: 100%;
    height: 100%;
}
.item-box{
    width: 100%;
    height: 200rpx;
    box-sizing: border-box;
}
.point-info{
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 110rpx;
    border-bottom: 2rpx solid #cccccc;
    box-sizing: border-box;
}
.point-title{
    padding-left: 30rpx;
    padding-right: 30rpx;
    box-sizing: border-box;
    width: 500rpx;
    height: 60rpx;
    font-size: 36rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.point-content{
    padding-left: 30rpx;
    padding-right: 30rpx;
    box-sizing: border-box;
    width: 500rpx;
    height: 40rpx;
    font-size: 26rpx;
    
    color: #999999;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}
.set-position{
    width: 100%;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.fixed{
    width: 100%;
    height: 1000px;
    background: black;
    opacity: 0.5;
    z-index: 100;
    position: fixed;
    left: 0;
    top: 0;
    color: white;
}
.red{
    color: red;
}
.set-destination-image{
    width: 30rpx;
    height: 30rpx;
}