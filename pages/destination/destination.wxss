/* pages/destination/destination.wxss */
page {
  background-color: #ffffff;
  height: 100%;
  font-size: 28rpx;
}
.container{
    display: -webkit-flex;
    display: flex;
    flex-direction: column;
    height: 100%;
    padding-bottom: 100rpx;
}


map{
    flex:1;
    width:100%;
}
.split{
    padding: 0 4rpx;
}
/*自己信息展示*/

.time-display{
    width: 100%;
    height: 50rpx;
    color: #999999;
    flex-wrap: nowrap;
}
.name{
    width: 200rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.distination{
    width: 300rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.left-name{
    width: 400rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.right-distination{
    width: 30%;
    text-align: right;
}

.place{
    flex: 1;
    color: #0033ff;
    overflow: hidden;
}

.speed{
    width: 200rpx;
    overflow: hidden;
}
.the-speed{
  margin-right: 20rpx;
}
.route{
    width: 200rpx;   
    font-size: 28rpx;
}
.green{
    color: #49deaf;
}
.orange{
    color: #ffce4c;
}
.red{
    color: #ff3c6a;
}

/*群成员信息列表*/

.user-code{
    width: 60rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.red-cicle{
    width: 30rpx;
    height: 30rpx;
    border-radius: 50%;
    background: red;
    color: white;
    font-size: 24rpx;
}
.up-image{
    height: 50rpx;
}
.up-img{
    height: 50rpx;
    width: 50rpx;
}
.banner{
    width: 100%;
    height: 130rpx;
    box-sizing: border-box;
    padding-left: 20rpx;
}
/*底部样式*/
.speak{
    width: 100%;
    height: 100rpx;
    display: flex;
    background-color: white;
    align-items: center;
    
}
.left-set{
    flex: 1;
}
.middle-btn{
    flex: 4;
    height: 70rpx;
}
.speak-btn{
    width: 100%;
    height: 100%;
}
.right-chat{
    flex: 1;
    position: relative;
}
.img{
    width: 50rpx;
    height: 50rpx;
}

.hint{
    background-color: black;
    width: 100%;
    height: 100%;
    position: fixed;
    opacity: 0.8;
    left: 0;
    top: 0;
}
.hint-image{
    width: 100%;
    height: 200rpx;
    position: relative;
}
.my-img{
    height: 150rpx;
    width: 150rpx;
    position: absolute;
    right: 50rpx;
    top: 50rpx;
}
.my-image{
    border-radius: 50%;
}
.hint-info{
    width: 100%;
    height: 200rpx;
    color: white;
    font-size: 40rpx;
    font-weight: 600;
}
.hint-know{
    width: 100%;
    height: 600rpx;
    display: flex;
    justify-content: center;
    position: relative;
}
.know-box{
    position: absolute;
    top: 600rpx;
    border: 2rpx solid #ffffff;
    border-radius: 5%;
    color: #ffffff;
    width: 300rpx;
    height: 80rpx;
}
.hornc_image{
    height: 40rpx;
    width: 40rpx;
    position: absolute;
    left: 60%;
    top: 50%;
    transform: translateY(-50%);
}
/*新增样式，3.0版本*/
.top-scroll{
  width: 100%;
  height: 200rpx;
  border-bottom: 2rpx solid #e6e6e6;
}
.hasReached{
  color: #09d292;
  border: 1rpx solid #09d292;
  border-radius: 10%;
}
.scroll-item{
  width: 140rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  float: left;
}
.img-box{
  width: 140rpx;
  height: 140rpx;
}
.username-box{
  width: 140rpx;
  height: 60rpx;
  position: relative;
  font-size: 24rpx;
}
.triangle-position{
  position: absolute;
  bottom: 5rpx;
  left: 50%;
  transform: translateX(-50%);
}
.mySelfImage{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 8rpx solid #cccccc;
}
.item-userinfo-display{
  width: 100%;
  height: 100rpx;
}


/* 转发样式 */
.sharecircle{
  width: 80rpx;
  height: 80rpx;
  border: 7rpx solid #cccccc;
  border-radius: 50%;
  position: relative;
  background-color: #ffffff;
}

.sharerow{
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  width: 40rpx;
  height: 5rpx;
  background-color: #cccccc;
}

.sharecolumn{
  position: absolute;
  left: 50%;
  top: 50%;
  width: 40rpx;
  height: 5rpx;
  background-color: #cccccc;
  transform: translate(-50%,-50%) rotate(90deg);
}

.baseContent{
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 140rpx;
}
.baseItem{
  height: 120rpx;
  width: 230rpx;
  border: 2rpx solid #e6e6e6;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  border-radius: 10rpx;
  padding: 10rpx;
  box-sizing: border-box;
}
.baseTime{
  padding: 10rpx;
}
.usernameWidth{
  width: 140rpx;
  overflow: hidden;
  display: inline-block;
}
.imgReached{
  width: 180rpx;
  height: 120rpx;
  margin-left: 80rpx;
}
.isReachBox{
  margin-left: 50rpx;
  flex: 1;
  display: flex;
  align-items: center
}
.isReachedText{
  display: inline-block;
}
.maxWidth{
  max-width: 250rpx;
}

